{
	"version": 2,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 22,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "gcc",
			"displayName": "GCC",
			"description": "Default build options for GCC",
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror"
			}
		},
		{
			"name": "clang",
			"displayName": "Clang",
			"description": "Default build options for Clang",
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_CXX_FLAGS": "-Wall -Wextra -Werror"
			}
		},
		{
			"name": "default",
			"inherits": "clang"
		}
	],
	"buildPresets": [
		{
			"name": "default",
			"configurePreset": "default"
		}
	]
}
